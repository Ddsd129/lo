#!/bin/bash
echo "Entrez le principal :"
read p
echo "Entrez le taux d'intérêt :"
read r
echo "Entrez le temps en années :"
read t
interest=$(echo "$p * $r * $t / 100" | bc)
echo "L'intérêt simple est : $interest"
git clone https://github.com/Ddsd129/gkpbt-css-circle.git
git checkout -b bug-fix-typo
echo "Correction de fautes" >> README.md
git commit -am "Correction de fautes dans README"
git push origin bug-fix-typo
